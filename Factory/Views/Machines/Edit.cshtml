@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Edit Machine</h2>

<h4>Wait, wait, wait... this isn't the @Html.DisplayFor(model => model.Designation)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  <label>It's actually called the: </label>
  @Html.EditorFor(model => model.Designation)
  <br>
  <input type="submit" value="Solved!">
}

<hr />
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>
<p>@Html.ActionLink("See all Machines", "Index")</p>
<p>@Html.ActionLink("See all Engineers", "Index", "Engineers")</p>
<p>@Html.ActionLink("This Machine needs more Engineers! Add more here!", "AddEngineer", new { id = Model.MachineId })</p>