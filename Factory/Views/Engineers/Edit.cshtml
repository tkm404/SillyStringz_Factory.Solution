@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h2>Edit-gineer</h2>

<h4>Someone filed the wrong paperwork, and now we need to edit this Engineer!</h4>
<h4>@Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)

  <label>Our bad. What was this Engineer's name again? </label>
  @Html.EditorFor(model => model.Name)
  <br>
  <input type="submit" value="Solved!">
}

<hr />
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>
<p>@Html.ActionLink("See all Engineers", "Index")</p>
<p>@Html.ActionLink("See all Machines", "Index", "Machines")</p>
<p>@Html.ActionLink("Add MORE Machine Licenses", "AddMachine", new { id = Model.EngineerId })</p>